{
  "compilerOptions": {
    "target": "ES6", // Especifica a versão do JavaScript para compilar
    "module": "commonjs", // Especifica o sistema de módulos
    "outDir": "./dist", // Pasta de saída para os arquivos compilados
    "rootDir": "./src", // Pasta de entrada onde estão os arquivos TS
    "strict": true, // Ativa verificações de tipo estritas
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true /* Generate .d.ts files from TypeScript and JavaScript files in your project. */,
    "declarationMap": true /* Create sourcemaps for d.ts files. */,

    "skipDefaultLibCheck": true /* Skip type checking .d.ts files that are included with TypeScript. */,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos .ts na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
